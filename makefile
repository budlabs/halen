.PHONY: all clean run run-log

.ONESHELL:

VERSION ?= 0.1.0
NAME ?= halen
BUILD_DIR ?= build

CC ?= gcc
CFLAGS += -Wall -Wextra -std=gnu99 -g -O0 -I$(BUILD_DIR) -I$(SRC_DIR) $(shell pkg-config --cflags x11 xtst xext xfixes fontconfig xft)
LIBS = $(shell pkg-config --libs x11 xtst xext xfixes fontconfig xft) -lpthread
SRC_DIR = src

SRC = $(wildcard $(SRC_DIR)/*.c)
OBJ = $(SRC:$(SRC_DIR)/%.c=$(BUILD_DIR)/%.o)
EXEC = $(BUILD_DIR)/$(NAME)

LOG = .gcc

all: $(EXEC) 

$(EXEC): $(OBJ)
	$(CC) -o $@ $^ $(LIBS)

$(BUILD_DIR)/%.o: src/%.c $(BUILD_DIR)/config.h | $(BUILD_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

run:
	rm -f .log $(LOG) .history
	$(MAKE) clean
	$(MAKE) $(EXEC) --no-print-directory 2>&1 | tee -a $(LOG)
	./$(EXEC) -c .config -V

run-log:
	# signals doesnt work perfect when we PIPE to tee..
	rm -f .log $(LOG) .history
	$(MAKE) clean
	$(MAKE) $(EXEC) --no-print-directory 2>&1 | tee -a $(LOG)
	./$(EXEC) -c .config -V | tee -a .log

clean:
	rm -rf $(BUILD_DIR) $(LOG)

$(BUILD_DIR)/config.h: makefile | $(BUILD_DIR)
	@echo "/* Generated by makefile */" > $@
	@echo "#define VERSION \"$(VERSION)\"" >> $@
	@echo "#define PROGRAM_NAME \"$(NAME)\"" >> $@

$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)	
